<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="AtividadeFinalJPA">
	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>br.com.fiap.entity.Jogador</class>
		<class>br.com.fiap.entity.Time</class>
		<class>br.com.fiap.entity.Patrocinio</class>
		<properties>
			<property name="com.mysql.jdbc.Driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/dbtarefafinal"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="fiap"/>
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>
